		div.offcanvas.open
			div.offcanvas-wrap
				div.offcanvas-user.clearfix
					a(class="offcanvas-user-wishlist-link",href="/#!/wishlist")
						i.fa.fa-heart-o My Wishlist
					a(class="offcanvas-user-account-link",href="#")
						i.fa.fa-user Login
				nav.offcanvas-navbar
					ul.offcanvas-nav
						li.active
							a(href="/#!",class="dropdown-hover") Home 
						li
							a(href="/#!/shop",class="dropdown-hover") SHOP 
				div.offcanvas-widget
					div.widget.social-widget
						div.social-widget-wrap.social-widget-none
							a(href="#",title="Facebook",target="_blank")
								i.fa.fa-facebook
							a(href="#",title="Twitter",target="_blank")
								i.fa.fa-twitter
							a(href="#",title="Google+",target="_blank")
								i.fa.fa-google-plus
							a(href="#",title="Pinterest",target="_blank")
								i.fa.fa-pinterest
		div.wide-wrap#wrapper
		div.offcanvas-overlay
		header.header-container.page-heading-heading.header-type-default.header-default-center.header-navbar-default.header-scroll-resize
			div.navbar-container
				div.navbar.navbar-default.navbar-scroll-fixed
					div.navbar-default-wrap
						div.navbar-default-container
							div.navbar-default-row
								div.navbar-default-col
									div.navbar-wrap
										div.navbar-header
											div.container
												div.row
													div.col-md-12
														div.navbar-header-left
															div.user-login
																ul.nav.top-nav
																	li.menu-item
																		a(data-rel="loginModal",href="#")
																			i.fa.fa-user
																			span Login
														button(type="button",class="navbar-toggle")
															span.sr-only Toggle navigation
															span.icon-bar.bar-top
															span.icon-bar.bar-middle
															span.icon-bar.bar-bottom
														a(class="navbar-search-button search-icon-mobile",href="#")
															i.fa.fa-search
														a(class="cart-icon-mobile",href="#")
															i.elegant_icon_bag
															span 0
														a(class="navbar-brand",href="./")
															img(class="logo",src="images/logo.png")
															img(class="logo-fixed",src="images/logo-fixed.png")
															img(class="logo-mobile",src="images/logo-mobile.png")
														div.navbar-header-right
															div.navbar-minicart-topbar
																div.navbar-minicart
																		a(class="minicart-link",href="#") My Cart
																			span.minicart-icon
																				i.minicart-icon-svg.elegant_icon_bag 
																				span 0
																		div(class="minicart",style="display: none;")
																			div.minicart-header.no-items.show Your shopping bag is empty.
																			div.minicart-footer
																				div.minicart-actions.clearfix
																					a(class="btn btn-white-outline",href="#")
																						span.text Go to the shop
															div.user-wishlist
																a(href="wishlist.html")
																	i.user-wishlist-icon.fa.fa-heart-o
																	span My Wishlist
