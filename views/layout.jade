		#userloginModal.modal.fade.user-login-modal(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog
				.modal-content
					form#userloginModalForm
						.modal-header
							button.close(type='button', data-dismiss='modal')
								span(aria-hidden='true') ×
								span.sr-only Close
							h4.modal-title Login
						.modal-body
							.user-login-facebook
								button.btn-login-facebook(type='button')
									i.fa.fa-facebook
									| Sign in with Facebook
							.user-login-or
								span or
							.form-group
								label Username
								input#username.form-control(type='text', name='log', required='', value='', placeholder='Username')
							.form-group
								label(for='password') Password
								input#password.form-control(type='password', required='', value='', name='pwd', placeholder='Password')
							.checkbox.clearfix
								label.form-flat-checkbox.pull-left
									input#rememberme(type='checkbox', name='rememberme', value='forever')
									i
									|  Remember Me
								span.lostpassword-modal-link.pull-right
									a(href='#lostpasswordModal', data-rel='lostpasswordModal') Lost your password?
						.modal-footer
							span.user-login-modal-register.pull-left
								a(data-rel='registerModal', href='#') Not a Member yet?
							button.btn.btn-default.btn-outline(type='submit') Sign in
		#userregisterModal.modal.fade.user-register-modal(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog
				.modal-content
					form#userregisterModalForm
						.modal-header
							button.close(type='button', data-dismiss='modal')
								span(aria-hidden='true') ×
								span.sr-only Close
							h4.modal-title Register account
						.modal-body
							.user-login-facebook
								button.btn-login-facebook(type='button')
									i.fa.fa-facebook
									| Sign in with Facebook
							.user-login-or
								span or
							.form-group
								label Username
								input.form-control(type='text', name='user_login', required='', value='', placeholder='Username')
							.form-group
								label(for='user_email') Email
								input#user_email.form-control(type='email', name='user_email', required='', value='', placeholder='Email')
							.form-group
								label(for='user_password') Password
								input#user_password.form-control(type='password', required='', value='', name='user_password', placeholder='Password')
							.form-group
								label(for='user_password') Retype password
								input#cuser_password.form-control(type='password', required='', value='', name='cuser_password', placeholder='Retype password')
						.modal-footer
							span.user-login-modal-link.pull-left
								a(data-rel='loginModal', href='#loginModal') Already have an account?
							button.btn.btn-default.btn-outline(type='submit') Register
		#userlostpasswordModal.modal.fade.user-lostpassword-modal(tabindex='-1', role='dialog', aria-hidden='true')
			.modal-dialog
				.modal-content
					form#userlostpasswordModalForm
						.modal-header
							button.close(type='button', data-dismiss='modal')
								span(aria-hidden='true') ×
								span.sr-only Close
							h4.modal-title Forgot Password
						.modal-body
							.form-group
								label Username or E-mail:
								input.form-control(type='text', name='user_login', required='', value='', placeholder='Username or E-mail')
						.modal-footer
							span.user-login-modal-link.pull-left
								a(data-rel='loginModal', href='#loginModal') Already have an account?
							button.btn.btn-default.btn-outline(type='submit') Sign in
