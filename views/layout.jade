											div.container
												div.row
													div.col-md-12
														ul.nav.navbar-nav.primary-nav
															li
																a(href="/#!")
																	span.underline Home
															li
																a(href="/#!/shop")
																	span.underline SHOP
															li.navbar-search(ng-if="showSearchForm")
																a(class="navbar-search-button",href="javascript:void(0);",ng-click="initiateSearch()")
																	i.fa.fa-search
